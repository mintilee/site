{
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "preserve",
    "lib": ["ESNext","DOM","DOM.Iterable","ScriptHost"],
    "experimentalDecorators": true,
    "baseUrl": ".",
    "module": "ESNext",
    "importHelpers": true,
    "moduleResolution": "Node",
    "paths": {
      "@/*": ["src/*"],
    },
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/App.vue",
    "src/**/*.tsx",
    "tests/**/*.tsx",
    "tests/*.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "components.d.ts",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "build/**/*.ts",
    "build/**/*.d.ts",
    "mock/**/*.ts",
    "vite.config.ts",
  ],
  "exclude": ["node_modules", "dist", "**/*.js"]
}

